<div class="row article-item-list">
  <div class="col-xs-12 col-sm-5 col-md-3">
    {{ content.field_image }}
  </div>
  <div class="col-xs-12 col-sm-7 col-md-9">
    <h2 class="article-title">
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
    <div class="article-content article-content-trimmed">
      {{ content.body.0['#text']|striptags|slice(0, 400) ~ '...' }}
    </div>
    <div class="article-created-and-category">
      {{ content.getCreatedTime|date('U')|format_date('month_day') }} -
      Category:
      <a
        href="articles?category={{ content.field_category['#items'].getString() }}">
        {{ content.field_category.0 }}
      </a>
    </div>
  </div>
</div>

